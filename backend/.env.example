# ContractGuard MVP Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/contractguard
DB_HOST=localhost
DB_PORT=5432
DB_NAME=contractguard
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf
UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10
ANALYSIS_RATE_LIMIT_MAX=20

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# External Service Configuration
EXTERNAL_SERVICE_TIMEOUT=30000
RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false
ENABLE_CACHE=false

# Production Configuration (only set in production)
# SSL_KEY_PATH=/path/to/ssl/key
# SSL_CERT_PATH=/path/to/ssl/cert
# REDIS_URL=redis://localhost:6379
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=your-smtp-password